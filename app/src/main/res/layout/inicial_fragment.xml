<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/inicial_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".screens.inicial.InicialFragment">

        <ImageButton
            android:id="@+id/delivery_button"
            android:layout_width="165dp"
            android:layout_height="135dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/delivery"
            android:theme="@style/GoButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.144"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/collect_button"
            android:layout_width="165dp"
            android:layout_height="135dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/collection"
            android:theme="@style/GoButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.859"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/menu_button"
            android:layout_width="62dp"
            android:layout_height="55dp"
            android:layout_marginBottom="38dp"
            android:scaleType="fitXY"
            android:src="@drawable/menu"
            android:theme="@style/GoButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/see_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@string/see_menu"
            android:textColor="#F8F4F4"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/menu_button"
            app:layout_constraintVertical_bias="0.157" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/delivery_button"
            tools:layout_editor_absoluteX="120dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70dp"
            app:layout_constraintBottom_toTopOf="@+id/delivery_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/logofusion" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>